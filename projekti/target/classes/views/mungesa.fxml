<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.chart.PieChart?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.DatePicker?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.ListView?>
        <?import javafx.scene.control.MenuButton?>
        <?import javafx.scene.control.MenuItem?>
        <?import javafx.scene.control.ScrollBar?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.image.Image?>
        <?import javafx.scene.image.ImageView?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Font?>

<AnchorPane maxHeight="600.0" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1c2b36;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MungesaController">

    <children>
        <!-- Header -->
        <HBox layoutX="20" layoutY="20" spacing="10">
            <ImageView fitHeight="63.0" fitWidth="63.0" layoutX="37.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/ikona.png" />
                </image>
            </ImageView>
            <Label layoutX="138.0" layoutY="29.0" style="-fx-font-size: 24px; -fx-text-fill: white;" text="Raporti i Mungesave">
                <font>
                    <Font size="27.0" />
                </font></Label>
        </HBox>

        <!-- Linja ndarëse -->
        <Separator layoutX="5.0" layoutY="84.0" prefWidth="1150" />

        <!-- Paneli i Majtë -->
        <VBox layoutX="37.0" layoutY="222.0" prefHeight="311.0" prefWidth="336.0" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px; -fx-border-radius: 10px;">
            <Label prefHeight="167.0" prefWidth="215.0" style="-fx-font-size: 18px; -fx-text-fill: white;" text="Detajet e Mungesës" />
            <TextField fx:id="txtStudenti" promptText="Emri i Nxënësit" />
            <TextField fx:id="txtLenda" promptText="Lënda e Mësimit" />
            <TextField fx:id="txtKlasa" promptText="Klasa" />
            <DatePicker fx:id="datePicker" promptText="Data e Mungesës" />
            <TextField fx:id="txtArsyeja" promptText="Arsyeja e Mungesës" />

            <!-- Butonat -->
            <HBox spacing="10">
                <Button onAction="#regjistroMungese" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Regjistro Mungesë" />
                <Button onAction="#pastroFushat" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Pastro Fushat" />
            </HBox>
        </VBox>

        <!-- Paneli i Djathtë - Statistika -->
        <VBox layoutX="422.0" layoutY="222.0" prefHeight="305.0" prefWidth="336.0" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px; -fx-border-radius: 10px;">
            <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Statistika e Mungesave" />
            <Label fx:id="lblTotalJave" style="-fx-text-fill: white;" text="Total Mungesa (Javore): 0" />
            <Label fx:id="lblTotalMuaj" style="-fx-text-fill: white;" text="Total Mungesa (Mujore): 0" />
            <Label fx:id="lblNxenesiMeShumeMungesa" style="-fx-text-fill: white;" text="Nxënësi me më shumë mungesa: -" />
        </VBox>

        <!-- Grafiku -->
        <VBox layoutX="808.0" layoutY="222.0" prefHeight="305.0" prefWidth="336.0" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px; -fx-border-radius: 10px;">
            <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Grafiku i Mungesave" />
            <PieChart fx:id="pieChart" />
        </VBox>

        <!-- Lista e Mungesave me Kërkim dhe Fshirje -->
        <HBox layoutX="37.0" layoutY="540.0" spacing="10">
            <TextField fx:id="txtKerkim" promptText="Kërko Nxënës..." />
            <Button onAction="#kerkoStudent" text="🔎 Kërko" />
            <Button onAction="#fshiMungese" text="❌ Fshi" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </HBox>

        <ListView fx:id="listaMungesave" layoutX="37.0" layoutY="580.0" prefHeight="180.0" prefWidth="1140.0" />

        <!-- Ora dhe Data -->
        <Label fx:id="lblData" layoutX="1012.0" layoutY="103.0" prefHeight="63.0" prefWidth="107.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Data: 00-00-0000" />
        <Label fx:id="lblOra" layoutX="904.0" layoutY="109.0" prefHeight="51.0" prefWidth="81.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Ora: 00:00:00" />

        <!-- Shiriti i Statusit -->
        <Label fx:id="statusBar" layoutX="20.0" layoutY="770.0" prefHeight="30.0" prefWidth="1140.0"
               style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 5px;" text="Gati për regjistrim..." />

    </children>
</AnchorPane>
