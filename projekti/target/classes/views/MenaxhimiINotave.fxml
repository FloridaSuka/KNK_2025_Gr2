<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NotatController" style="-fx-background-color: #2c3e50;">
    <children>

        <HBox spacing="20" layoutX="30.0" layoutY="30.0">
            <Label text="Menaxhimi i Notave" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="80.0">
            <TextField fx:id="kerkoNxenes" promptText="Kërko Nxënës..." prefWidth="400.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;"/>
            <Button text="🔍" style="-fx-background-color: #1abc9c; -fx-text-fill: white;" />
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="130.0">
            <VBox spacing="15" prefWidth="350" style="-fx-background-color: #34495e; -fx-padding: 15px; -fx-border-radius: 8px;">
                <Label text="Detajet e Notave" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <TextField fx:id="txtEmriNxenesit" promptText="Emri i Nxënësit" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
                <TextField fx:id="txtLenda" promptText="Lënda e Mësimit" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
                <ComboBox fx:id="comboPeriudha" prefWidth="250.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String/>
                            <String fx:value="2"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <TextField fx:id="nota1" promptText="Nota 1" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
                <TextField fx:id="nota2" promptText="Nota 2" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
                <TextField fx:id="nota3" promptText="Nota 3" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
                <Button text="Regjistro Notat" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </VBox>

            <VBox spacing="15" prefWidth="300" style="-fx-background-color: #34495e; -fx-padding: 15px; -fx-border-radius: 8px;">
                <Label text="Statistika e Notave" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label text="Mesatarja e Notave: -" style="-fx-text-fill: white;" fx:id="lblMesatarja"/>
                <Label text="Nota Finale: -" style="-fx-text-fill: white;" fx:id="lblNotaFinale"/>
                <Button text="Llogarit Mesataren" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#llogaritMesataren"/>
                <Button text="Printo Raportin" style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
            </VBox>
        </HBox>

    </children>
</AnchorPane>

