<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DrejtorController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Open…" />
                        <Menu mnemonicParsing="false" text="Open Recent" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As…" />
                        <MenuItem mnemonicParsing="false" text="Revert" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Preferences…" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Cut" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Select All" />
                        <MenuItem mnemonicParsing="false" text="Unselect All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="500.0" maxWidth="800.0" prefHeight="500.0" prefWidth="800.0"
                    styleClass="login" stylesheets="@style.css"
                    xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1">
            <AnchorPane layoutY="-1.0" prefHeight="105.0" prefWidth="800.0" style="-fx-background-color: #264653;" styleClass="header" stylesheets="@style.css">
                <children>
                    <Text fill="#fffbfb" layoutX="133.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Miresevini drejtor!">
                        <font>
                            <Font name="Arial" size="36.0" />
                        </font>
                    </Text>
                    <ImageView fitHeight="63.0" fitWidth="63.0" layoutX="41.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/ikona.png" />
                        </image>
                    </ImageView>
                    <MenuButton fx:id="menuLanguage" contentDisplay="TEXT_ONLY" layoutX="641.0" layoutY="32.0" mnemonicParsing="false" popupSide="TOP" prefHeight="41.0" prefWidth="119.0" styleClass="language" text="Gjuha">
                        <items>
                            <MenuItem fx:id="menuAL" mnemonicParsing="true" text="ALB" />
                            <MenuItem fx:id="menuEN" mnemonicParsing="false" text="ENG" />
                        </items>
                    </MenuButton>
                </children>
            </AnchorPane>

            <!-- Butonat -->
            <Button fx:id="btnMesuesit"  contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="124.0" layoutY="145.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Mësuesit" onAction="#handleTeacher" >
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/teacher.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnKlaset" contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="324.0" layoutY="145.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Klasët" onAction="#handleClass">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/classroom.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnStatistikat" contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="524.0" layoutY="145.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Statistikat" >
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/diagram.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnLendet" contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="124.0" layoutY="315.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Lëndët" onAction="#handleSubject">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/education.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnProfile" contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="324.0" layoutY="315.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Cilesime">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/gear-solid.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnSignOut" contentDisplay="TOP" ellipsisString="" graphicTextGap="20.0" layoutX="524.0" layoutY="315.0" maxHeight="150.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0" text="Dil" onAction="#handleLogout">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/right-from-bracket-solid.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </AnchorPane>
    </children>
</VBox>

