<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #1c2b36;" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HelpController">

    <children>

        <!-- Paneli i majtë me opsionet -->
        <VBox layoutX="10.0" layoutY="20.0" spacing="10">
            <Button text="✅ Si mund ta përdorim aplikacionin?" onAction="#showPerdorimi" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" />
            <Button text="📊 Si bëhet llogaritja e statistikave?" onAction="#showLlogaritja" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" />
            <Button text="📝 Si regjistrohen notat në sistem?" onAction="#showRegjistrimi" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" />
            <Button text="🔄 Si pastrohen fushat në aplikacion?" onAction="#showPastrimi" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" />
            <Button text="📁 Si mund të shfaqen raportet e regjistruara?" onAction="#showShfaqja" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" />
        </VBox>

        <!-- Paneli i djathtë me tekstin përshkrues -->
        <TextArea fx:id="txtContent" layoutX="220.0" layoutY="20.0" prefHeight="460.0" prefWidth="550.0" wrapText="true" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

    </children>

</AnchorPane>
