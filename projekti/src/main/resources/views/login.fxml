<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController">

   <children>
      <AnchorPane layoutX="442.0" layoutY="85.0" prefHeight="350.0" prefWidth="287.0">
         <children>
            <Button fx:id="btnLogin" layoutX="59.0" layoutY="274.0" mnemonicParsing="false"
                    prefHeight="39.0" prefWidth="170.0" text="%loginButtonText"/>

            <TextField fx:id="txtUsername" layoutX="32.0" layoutY="84.0" prefHeight="39.0" prefWidth="224.0"
                       promptText="%usernamePrompt"/>

            <PasswordField fx:id="txtPassword" layoutX="32.0" layoutY="175.0" prefHeight="39.0" prefWidth="224.0"
                           promptText="%passwordPrompt"/>

            <Hyperlink fx:id="linkForgotPassword" layoutX="31.0" layoutY="220.0"
                       text="%forgotPassword"/>
         </children>
      </AnchorPane>

      <MenuButton fx:id="menuLanguage" layoutX="50.0" layoutY="27.0"
                  mnemonicParsing="false" popupSide="TOP"
                  prefHeight="41.0" prefWidth="119.0" text="%language">
         <items>
            <MenuItem fx:id="menuAL" mnemonicParsing="true" text="ALB" onAction="#handleAlbanianLanguage"/>
            <MenuItem fx:id="menuEN" mnemonicParsing="false" text="ENG" onAction="#handleEnglishLanguage"/>
         </items>
      </MenuButton>
   </children>
</AnchorPane>
