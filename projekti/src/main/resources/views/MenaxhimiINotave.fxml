<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.collections.FXCollections?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>
<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NotatController" style="-fx-background-color: #2c3e50;">
    <children>

        <HBox spacing="20" layoutX="30.0" layoutY="30.0">
            <Label text="Menaxhimi i Notave" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="80.0">
            <TextField fx:id="txtEmriNxenesit" promptText="Emri i Nxënësit" prefWidth="250.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;"/>
            <TextField fx:id="txtLenda" promptText="Lënda" prefWidth="250.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;"/>
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="130.0">
            <ComboBox fx:id="comboPeriudha" promptText="Periudha" prefWidth="250.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;">
            </ComboBox>
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="180.0">
            <TextField fx:id="nota1" promptText="Nota 1" prefWidth="150.0" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
            <TextField fx:id="nota2" promptText="Nota 2" prefWidth="150.0" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
            <TextField fx:id="nota3" promptText="Nota 3" prefWidth="150.0" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
            <Button text="Regjistro Notat" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#regjistroNota"/>
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="230.0">
            <Button text="Llogarit Mesataren" style="-fx-background-color: #2980b9; -fx-text-fill: white;" onAction="#llogaritMesataren"/>
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="280.0">
            <Label text="Mesatarja: " style="-fx-text-fill: white;" />
            <Label fx:id="lblMesatarja" style="-fx-text-fill: white;" />
            <Label text="Nota Finale: " style="-fx-text-fill: white;" />
            <Label fx:id="lblNotaFinale" style="-fx-text-fill: white;" />
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="330.0">
            <Label fx:id="lblDataOra1" style="-fx-text-fill: white;" />
        </HBox>

        <HBox spacing="20" layoutX="30.0" layoutY="360.0">
            <Label fx:id="lblDataOra2" style="-fx-text-fill: white;" />
        </HBox>

        <ListView fx:id="listaNotave" layoutX="30.0" layoutY="400.0" prefWidth="740.0" prefHeight="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white;" />

    </children>
</AnchorPane>

