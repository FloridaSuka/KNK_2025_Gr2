<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.NxenesiController">

    <!-- Header -->
    <top>
        <Label text="Menaxhimi i Nxënësve" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="24"/>
            </font>
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
        </Label>
    </top>

    <!-- Qendra: Tabela -->
    <center>
        <TableView fx:id="tableViewNxenesit" prefHeight="400.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colEmri" text="Emri"/>
                <TableColumn fx:id="colMbiemri" text="Mbiemri"/>
                <TableColumn fx:id="colGrupi" text="Grupi"/>
                <TableColumn fx:id="colFakulteti" text="Fakulteti"/>
            </columns>
        </TableView>
    </center>

    <!-- Fundi: Forma + Butonat -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="30" right="30"/>
            </padding>

            <!-- Forma e inputeve -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>

                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Emri:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emriField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Mbiemri:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="mbiemriField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Klasë:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="klasaField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            </GridPane>

            <!-- Butonat -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="shtoButton" text="Shto"/>
                <Button fx:id="perditesoButton" text="Përditëso"/>
                <Button fx:id="fshijButton" text="Fshij"/>
                <Button fx:id="pastroButton" text="Pastro"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
