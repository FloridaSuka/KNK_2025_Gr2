<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" styleClass="login" stylesheets="@../views/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <AnchorPane layoutX="442.0" layoutY="85.0" prefHeight="350.0" prefWidth="287.0" styleClass="login-form">
         <children>
            <Button layoutX="59.0" layoutY="274.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="170.0" styleClass="login-button" fx:id="btnLogin" text="%btnlogin" onAction="#handleLogin"/>
            <TextField fx:id="txtUsername" layoutX="32.0" layoutY="84.0"  prefHeight="39.0" prefWidth="224.0" promptText="%promptUsername"/>
            <PasswordField fx:id="txtPassword" layoutX="32.0" layoutY="175.0" prefHeight="39.0" prefWidth="224.0" promptText="%promptPassword" />
            <Hyperlink layoutX="31.0" layoutY="220.0" onAction="#onForgotPassword" text="%promptForgotPass" styleClass="password-field"/>
         </children>
      </AnchorPane>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="131.0" prefHeight="70.0" prefWidth="300.0" fx:id="loginTitle" text="%loginTitle" textFill="WHITE">
         <font>
            <Font name="Colonna MT" size="56.0" />
         </font>
      </Label>
      <ImageView fitHeight="178.0" fitWidth="200.0" layoutX="84.0" layoutY="229.0">
         <image>
            <Image url="@../images/ikona.png" />
         </image>
      </ImageView>
      <MenuButton fx:id="menuLanguage" contentDisplay="TEXT_ONLY" layoutX="50.0" layoutY="27.0"
                  mnemonicParsing="false" popupSide="TOP"
                  prefHeight="41.0" prefWidth="119.0"
                  styleClass="language" text="%txtLang">
         <items>
            <MenuItem fx:id="menuAL" onAction="#handleAlbanianLanguage" mnemonicParsing="false" text="ALB" />
            <MenuItem fx:id="menuEN" onAction="#handleEnglishLanguage" mnemonicParsing="false" text="ENG" />
         </items>
      </MenuButton>

   </children>
</AnchorPane>
