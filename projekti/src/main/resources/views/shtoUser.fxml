      <RadioButton fx:id="radioNxenes" layoutX="642.0" layoutY="350.0" mnemonicParsing="false" text="Nxenes" textFill="WHITE" />

      <ImageView fitHeight="56.0" fitWidth="76.0" layoutX="472.0" layoutY="21.0">
         <image>
            <Image url="@../images/ikona.png" />
         </image>
      </ImageView>

      <Button layoutX="720.0" layoutY="14.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="52.0" styleClass="button-close" text="X" textFill="#db1616" />

   </children>
