      <PasswordField fx:id="txtFjalekalimi" layoutX="400.0" layoutY="270.0" prefHeight="30.0" prefWidth="310.0" promptText="Shkruaj Fjalekalimin"/>
      <PasswordField fx:id="txtFjalekalimi2" layoutX="400.0" layoutY="310.0" prefHeight="30.0" prefWidth="310.0" promptText="Rishkruaj Fjalekalimin"/>

      <Label layoutX="90.0" layoutY="110.0" prefHeight="30.0" prefWidth="240.0" text="Emri:"  />
      <Label layoutX="90.0" layoutY="150.0" prefHeight="30.0" prefWidth="240.0" text="Mbiemri:" />
      <Label layoutX="90.0" layoutY="230.0" prefHeight="30.0" prefWidth="240.0" text="Emri i perdoruesit:" />
      <Label layoutX="90.0" layoutY="190.0" prefHeight="30.0" prefWidth="240.0" text="Email:" />
      <Label layoutX="90.0" layoutY="270.0" prefHeight="30.0" prefWidth="240.0" text="Fjalekalimi:" />
      <Label layoutX="90.0" layoutY="310.0" prefHeight="30.0" prefWidth="240.0" text="Rishkruaj fjalekalim-in:" />
