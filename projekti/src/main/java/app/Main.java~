package app;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

import java.util.Locale;
import java.util.ResourceBundle;

public class Main extends Application {

    @Override
    public void start(Stage primaryStage) {
        try {
            // Vendosim gjuhën fillestare
            Locale locale = new Locale("al");
            ResourceBundle bundle = ResourceBundle.getBundle("bundles.Messages", locale, getClass().getClassLoader());

            // Ngarkojmë skedarin FXML
            FXMLLoader loader = new FXMLLoader(getClass().getResource("/views/login.fxml"), bundle);

            // Ngarkojmë pamjen
            Parent root = loader.load();

            // Titulli dhe skena
            primaryStage.setTitle(bundle.getString("login.title"));
            primaryStage.setScene(new Scene(root));
            primaryStage.show();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}
